<section class="white-text">
  <div>
    <h3>会員情報</h3>
    <table>
      <tr>
        <th>メールアドレス</th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th>会員情報の変更</th>
        <td>
          <%= link_to "変更はこちらから", edit_user_registration_path, class: "waves-effect waves-light btn grey darken-3", style: "margin-top: 20px" %>
        </td>
      </tr>
    </table>
  </div>
  <h3>予約済み作品</h3>
  <% @reservations.each do |reservation| %>
    <div class="row">
      <div class="card blue-grey darken-4">
        <div class="card-content white-text">
          <span class="card-title">作品名: <%= reservation.schedule.movie.title %></span>
          <p>上映開始時間: <%= reservation.schedule.screening_date.strftime('%H:%M') %></p>
          <p>スクリーン: <%= reservation.schedule.theater_number %></p>
          <p>予約座席: <%= reservation.reserved_seat %></p>
        </div>
      </div>
    </div>
  <% end %>
  <div style="text-align: center">
    <%= link_to "上映スケジュールへ戻る", root_path, class: "waves-effect waves-light btn grey darken-3", style: "margin: 20px 0px" %>
  </div>
</section>